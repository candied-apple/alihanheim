{
    "name": "alihanheim",
    "description": "Alihanheim Valheim Game Updater",
    "version": "1.0.9",
    "author": "candiedapple",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-linux": "electron-builder --linux"
    },
    "build": {
        "appId": "com.candiedapple.alihanheim",
        "publish": [
            {
                "provider": "github",
                "owner": "candied-apple",
                "repo": "alihanheim"
            }
        ],
        "mac": {
            "category": "public.game",
            "target": "dmg",
            "icon": "build/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "category": "Game",
            "icon": "build/logo.png"
        },
        "win": {
            "target": "nsis",
            "icon": "build/logo.ico"
        },
        "files": [
            "build/**/*",
            "index.html",
            "main.js",
            "renderer.js",
            "Norse.otf"
        ],
        "directories": {
            "buildResources": "build"
        }
    },
    "dependencies": {
        "electron-updater": "^6.2.1",
        "electron-log": "^5.0.1"
    },
    "devDependencies": {
        "electron": "^31.3.1",
        "electron-builder": "^24.13.3"
    }
}